import altair as alt
diameter = [6,8,10,14,18]
price = [7,9,13,17.5,18]
data = alt.Data(diameters =diameter, prices= price)
chart = alt.Chart(data)
mark = chart.mark_point()
enc = mark.encode(x='diameters',y='prices')
enc.display()

def price (dia):
    return 0.7*diam + 5
p_line = []
for diam in diameter:
    p_line.append(price(diam))
print (p_line)
